<Window x:Class="FontMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FontMenu"
        mc:Ignorable="d"
        Title="Font Menu" Height="200" Width="650" WindowStartupLocation="CenterScreen" Background="#FF040466">
    <DockPanel Margin="10" Background="AntiqueWhite">
        <Menu DockPanel.Dock="Top" Height="26">
            <MenuItem x:Name="menuFont" Header="Font"/>
            <MenuItem x:Name="menuSize" Header="Size"/>
        </Menu>
        <Grid>
            <TextBlock x:Name="textblock" Margin="10" FontSize="20" FontFamily="Arial"/>
        </Grid>
    </DockPanel>
</Window>
