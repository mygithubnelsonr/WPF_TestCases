<Window x:Class="Dialoges.Dialog1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialoges"
        mc:Ignorable="d"
        Title="NameDialog" Height="160" Width="280" WindowStartupLocation="CenterScreen" Background="#FFA2AEAA"
                    ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Loaded="Window_Loaded">
    <StackPanel Margin="10">
        <Label Content="Bitte Vorname eingeben" Margin="10 0"/>
        <TextBox x:Name="textFirstname" FontSize="16" Background="Bisque" Margin="10 5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="buttonCancel" Content="_Cancel" IsCancel="True"  Width="60" Height="24" Margin="20 15"/>
            <Button x:Name="buttonSave"   Content="_Save"   IsDefault="True" Width="60" Height="24" Margin="20 15" 
                    Click="buttonSave_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
