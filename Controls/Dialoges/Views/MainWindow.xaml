<Window x:Class="Dialoges.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialoges"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="#FF2A3632">
    <Grid Margin="10" Background="#FF5E766E">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Firstname:" FontWeight="Bold"/>
            <TextBlock x:Name="textblockName" Text="" Height="24" Background="AntiqueWhite" />
        </StackPanel>
        <Button Grid.Row="1" x:Name="buttonDialog" Content="Open Dialog" Height="40" Width="100" FontWeight="Bold"
                Click="buttonDialog_Click"/>
    </Grid>
</Window>
