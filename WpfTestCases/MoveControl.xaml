<Window x:Class="WpfTestCases.MoveControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestCases"
        mc:Ignorable="d"
        Title="MoveControl" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid x:Name="gridmovetext" MouseMove="gridmovetext_MouseMove">
        <TextBlock x:Name="textblock" Text="Hallo" Height="34" Width="80" HorizontalAlignment="Left"
                       VerticalAlignment="Top" FontFamily="Segoe Script" FontSize="28" FontWeight="Bold"
                       MouseMove="textblock_MouseMove"/>
    </Grid>
</Window>
