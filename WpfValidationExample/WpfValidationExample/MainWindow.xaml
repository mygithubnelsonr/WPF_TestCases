<Window x:Class="WpfValidationExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfValidationExample"
        mc:Ignorable="d"
        Title="Switchboard Valitation" Height="232" Width="300" Background="#FF096292" WindowStartupLocation="CenterScreen">

    <WrapPanel Orientation="Vertical" Margin="20" Background="#FF074263" HorizontalAlignment="Center">
        <Button x:Name="ButtonValidationWithException" Margin="5"
                Click="ButtonValidationWithException_Click"
                Content="Validation with Exception and Tooltip"/>

        <Button x:Name="ButtonValidationRule"
                Click="ButtonValidationRule_Click"
                Content="Validation with ValidationRule and template"
                Margin="5"></Button>
            
        <Button x:Name="ButtonValidationIDataErrorInfo"
                Click="ButtonValidationIDataErrorInfo_Click"
                Content="Validation with IDataErrorInfo"
                Margin="5"></Button>
    </WrapPanel>
</Window>
