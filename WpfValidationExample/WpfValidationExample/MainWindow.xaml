<Window x:Class="WpfValidationExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfValidationExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="202" Width="329" WindowStartupLocation="CenterScreen">

    <WrapPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center">

        <Button x:Name="ButtonPropertyTrigger" Margin="5"
                Content="Property Trigger"
                Click="ButtonPropertyTrigger_Click"/>

        <Button x:Name="ButtonValidationWithException"
                Click="ButtonValidationWithException_Click"
                Content="Validation with Exception and Tooltip"
                Margin="5"/>

        <Button x:Name="ButtonValidationRule"
                Click="ButtonValidationRule_Click"
                Content="Validation with ValidationRule and template"
                Margin="5"></Button>
            
        <Button x:Name="ButtonValidationIDataErrorInfo"
                Click="ButtonValidationIDataErrorInfo_Click"
                Content="Validation with IDataErrorInfo"
                Margin="5"></Button>
    </WrapPanel>
</Window>
